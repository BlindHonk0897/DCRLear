    </div>
    <div class="row">
        <div class="col-md-1" style="background-color:transparent;color:transparent">
            <div class="box-comments box-widget widget-user" style="background-color:transparent;color:transparent;">
                <div class="widget-user-header bg-transparent" style="background-color:transparent">

                </div>
                <div class="widget-user-image">

                </div>
                <div class="box-footer" style="background-color:transparent;color:transparent">
                    <div class="row" style="background-color:transparent;color:transparent">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>
                    <div class="box-tools col-xs-pull-9">
                        <div class="has-feedback">

                        </div>
                    </div>
                </div>
                <div class="box-body no-padding">
                    <div class="mailbox-controls">
                    </div>
                    <div class="table-responsive mailbox-messages">
                        <div class="box-body box-profile">
                            <h1 class="profile-username text-center"><font size="30">Certification</font></h1>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <input type="text" name="Employee" value="@Model.Employee.Employee_ID" hidden />
                                <input type="text" name="URLBACK" value="@ViewBag.URLBack" hidden />
                                <label>Choose Type of Certification:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-codepen"></i>
                                    </div>
                                    <select class="form-control select2" name="Code" style="width: 100%;">
                                        @if (Model.AvailableReCertifications.Count() > 0)
                                        {
                                            <option selected="selected" value="X">-- Select Here --</option>
                                        }
                                        else
                                        {
                                            <option selected="selected" value="X"><code>NO Availble for Re-Certification</code></option>
                                        }


                                        @foreach (var i in Model.AvailableReCertifications)
                                        {
                                            <option value="@i.CertificationCode">@i.CertificationCode</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Date Certified:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @*<input type="text" name="DateCertified" class="form-control" data-inputmask="'alias': 'mm/dd/yyyy'" data-mask>*@
                                    <input readonly id="SelectedDate" class="form-control" name="DateCertified" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer no-padding">
                    <div class="mailbox-controls">
                        <button type="submit" class="btn btn-primary btn-sm checkbox-toggle">
                            <i class="fa fa-share"></i>&nbsp;<span>Submit</span>
                        </button>
                        <div class="pull-right">
                            <button type="button" onclick="@("window.location.href='" + @Url.Action(ViewBag.URLBack, "IT") + "'")" ; class="btn btn-danger btn-sm checkbox-toggle">
                                <i class="fa fa-close"></i>&nbsp;<span>Cancel</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1" style="background-color:transparent;color:transparent">
            <div class="box-comments box-widget widget-user" style="background-color:transparent;color:transparent">
                <div class="widget-user-header bg-transparent" style="background-color:transparent">
                    <h3 class="widget-user-username"></h3>
                    <h5 class="widget-user-desc"></h5>
                </div>
                <div class="widget-user-image">

                </div>
                <div class="box-footer" style="background-color:transparent;color:transparent">
                    <div class="row" style="background-color:transparent;color:transparent">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

