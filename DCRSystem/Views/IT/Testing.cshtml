        <div class="col-md-4">
            <div class="box box-widget widget-user">
                <div class="widget-user-header bg-aqua-active">
                    <h3 class="widget-user-username">@Model.Employee.Last_Name , @Model.Employee.First_Name</h3>
                    <h5 class="widget-user-desc">@Model.Employee.Position</h5>
                </div>
                <div class="widget-user-image">
                    <img class="img-circle" src="~/Content/img/user.svg" alt="User Avatar">
                </div>
                <div class="box-footer" style="background-color:transparent">
                    <div class="row">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text">Choosen Employee</span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4" style="background-color:transparent;color:transparent">
            <div class="box-comments box-widget widget-user" style="background-color:transparent;color:transparent">
                <div class="widget-user-header bg-transparent" style="background-color:transparent">
                    <h3 class="widget-user-username"></h3>
                    <h5 class="widget-user-desc"></h5>
                </div>
                <div class="widget-user-image">

                </div>
                <div class="box-footer" style="background-color:transparent;color:transparent">
                    <div class="row" style="background-color:transparent;color:transparent">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header"></h5>
                                <span class="description-text"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
