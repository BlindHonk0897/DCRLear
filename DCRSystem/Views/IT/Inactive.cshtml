@using PagedList.Mvc
@model PagedList.IPagedList<DCRSystem.Models.EmployeeDCR_Vw>
@{
    ViewBag.Title = "Inactive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/IT/Inactive">
    <h3><i class="fa fa-users"></i>&nbsp;<strong><font color="gray">Inactive Employees</font></strong><small class="label pull-right bg-gray-active"><input type="search" class="form-control" name="searchInput" placeholder="Search by Lastname/BadgeNo" /></small></h3>
</form>

<div class="row">
    <div class="col-md-12">
        <div class="box box-default">
            <div class="box-body">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                            <th>Position</th>
                            <th>Cell</th>
                            <th>Supervisor</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Employee_ID</td>
                                <td>@item.Last_Name , @item.First_Name</td>
                                <td>@item.Position</td>
                                <td>@item.Cost_Center_Description</td>
                                <td>@item.Supervisor</td>
                                <td>
                                    <a href="@Url.Action("Details","IT",new { id = item.Employee_ID,urlBack="Inactive" })" class="btn btn-default btn-sm" style="width:90px;">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="box-body">
        <div class="clearfix">
            <div class="hint-text" style="font-size: 18px!important;">Showing Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</div>
            <ul class="pagination" style="float:right; font-size:20px;">
                <li><a> @Html.PagedListPager(Model, page => Url.Action("Inactive", new { page }))</a></li>
            </ul>
        </div>
    </div>

</div>

