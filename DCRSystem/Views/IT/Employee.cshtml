@using PagedList.Mvc
@model PagedList.IPagedList<DCRSystem.Models.EmployeeDCR_Vw>
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DCRSystem.Models.lear_DailiesCertificationRequirementEntities lear = new DCRSystem.Models.lear_DailiesCertificationRequirementEntities();
    var cell = lear.EmployeeDCR_Vw.Select(emp => emp.Cost_Center_Description).Distinct().ToList();
}
<style type="text/css">
    img[class="images"][title]:hover:after {
        font-style: italic;
        color: gray;
    }
   
</style>
@Styles.Render("~/Content/PagedList.css")
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

<form action="/IT/Employee">
        <h3><i class="fa fa-users"></i>&nbsp;<strong><font color="#c43e29">Employees</font></strong><small class="label pull-right bg-red"><input type="search" class="form-control" name="searchInput" placeholder="Search by Lastname/BadgeNo" /></small></h3>
 </form>
<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-body">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                            <th>Position</th>
                            <th>Cell</th>
                            <th>Change</th>
                            <th>Supervisor</th>
                            <th>Progress</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Employee_ID</td>
                                <td>@item.Last_Name , @item.First_Name</td>
                                <td>@item.Position</td>
                                @*<td>@item.Cost_Center_Description</td>*@
                                <td>                                 
                                    <select id="" class="dropdown form-control select2" name="Month" style="width: 99%;">                                    
                                        @foreach (var c in cell)
                                        {
                                           <option value="@c" @(item.Cost_Center_Description.ToString() == c ?" selected":"")>@c</option>
                                        }
                                    </select>                                                                   
                                </td>
                                <td><span class="text-center" title="Save Changes" onclick="alert('Saving Changes')"><i class="fa fa-save text-red"></i>&nbsp;Save</span> </td>
                                <td>@item.Supervisor</td>
                                <td>
                                    <a href="@Url.Action("Details","IT",new { id = item.Employee_ID,urlBack = "Employee" })">
                                        <img src="~/Content/img/Emp_Prog.png" height="30" width="30" />
                                    </a>
                                </td>
                                <td>
                                    @if (item.Job_Status.ToUpper().Contains("CURRENT"))
                                    {

                                        <a href="@Url.Action("Certified", "IT", new { id = item.Employee_ID, urlBack = "Employee" })">

                                            <img src="~/Content/img/Certified.png" title="Certified Employee" height="30" width="30" class="images" />
                                        </a>
                                        <a href="@Url.Action("ReCertified", "IT", new { id = item.Employee_ID, urlBack = "Employee" })">

                                            <img src="~/Content/img/ReCertified.png" title="Re-Certified Employee" height="30" width="30" class="images" />
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("ModalMessage", "IT", new { message =  "Cannot Continue Employee is Inactive", urlBack = "Employee" })">

                                            <img src="~/Content/img/InActiveCertified.png" title="InActive Employee" height="30" width="30" class="images" />
                                        </a>
                                        <a href="@Url.Action("ModalMessage", "IT", new { message =  "Cannot Continue Employee is Inactive", urlBack = "Employee" })">

                                            <img src="~/Content/img/InActiveRecertified.png" title="InActive Employee" height="30" width="30" class="images" />
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="clearfix">
            <div class="hint-text pull-left" style="font-size: 18px!important;">Showing Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</div>
            <ul class="pagination pull-right">
                <li> @Html.PagedListPager(Model, page => Url.Action("Employee", new { page }))</li>
            </ul>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('.select2').select2();
</script>
