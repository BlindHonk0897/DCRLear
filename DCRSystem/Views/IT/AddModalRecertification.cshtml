@model DCRSystem.CustomViewModel.ModalAddRecertificactionModel
@{
    ViewBag.Title = "AddModalRecertification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
<script type="text/javascript">
    $(window).on('load', function () {
        $('#myModal').modal('show');
    });
</script>
<div class="example-modal">
    @using (Html.BeginForm("AddRecertification", "IT", FormMethod.Post, new { id = "AddForm" }))
    {
        <div id="myModal" class="modal fade" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="@Url.Action("ReCertificationPlan","IT")" class="close" title="Cancel Transaction" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </a>
                        <h4 class="modal-title">Add ReCertification Plan for @ViewBag.Name</h4>
                    </div>
                    <div class="modal-body">
                        <input name="EmployeeID" value="@Model.BadgeNo" type="hidden" />
                        <h5>Step 2:</h5>
                        <div class="form-group">
                            <label>Choose Certification:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-certificate"></i>
                                </div>
                                <select class="form-control select2"  name="Code" style="width: 100%;">
                                    <option selected="selected" value="X">-- Select Here --</option>
                                    @foreach (var cert in Model.CertificationTrackers)
                                    {
                                        <option  value="@cert.CertificationCode">@cert.CertificationCode</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <h5>Step 3:</h5>
                        <div class="form-group">
                            <label>Date Planned:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @*<input type="text" name="DateCertified" class="form-control" data-inputmask="'alias': 'mm/dd/yyyy'" data-mask>*@
                                <input readonly id="SelectedDate" class="form-control" name="DatePlanned" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="@Url.Action("ReCertificationPlan","IT")" t class="btn btn-default pull-left">Cancel</a>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <script>$('.select2').select2();</script>
</div>
@section ViewSpecificJavascript{
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    <script type="text/javascript">
        function modalShow() {
            $('#myModal').modal('show');
        }
        // Date picker
        $(function () {
            $('#SelectedDate').datepicker({
                changeMonth: true,
                changeYear: true,
                format: "mm/dd/yyyy",
                language: "tr"
            });
        });

    </script>
}




