@using Microsoft.AspNet.Identity
<style type="text/css">
    .main-header a{
        color:black;
    }
    .main-header .sidebar-toggle:hover {
        color: #A71717;
    }
    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important
    }

    .shadow {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important
    }

    .shadow-none {
        box-shadow: none !important
    }
</style>

<header class="main-header hoverable">
    @* BEGIN Logo *@
    <p class="logo" >
        @* Mini logo for sidebar 50x50 pixels *@
        @*<span class="logo-mini"><b>A</b>LT</span>*@
        <span class="logo-mini"><img src="~/Content/img/lear.png" style="height:50px;" /></span>
        @* Logo for regular state and mobile devices *@
        @*<span class="logo-lg"><b>Admin</b>LTE</span>*@
        <span class="logo-lg"><img src="~/Content/img/Lear Logo - Original Pantone 485C and Black.png" width="200" height="60" /></span>
        @*<span class="logo-lg"><img src="~/Content/img/lear_inverse.png" height="50" width="100" /></span>*@
    </p>
    @* END Logo *@
    @* BEGIN Header *@
    <nav class="navbar navbar-static-top shadow p-3 mb-5 bg-white rounded" role="navigation">

        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        &nbsp;
        &nbsp;
      
        <a>
            <font size="6"><strong>DAILIES CERTIFICATION REQUIREMENT SYSTEM</strong></font>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">

                @* BEGIN User Account Menu *@

                @if (Session["UserRole"] != null || Session["UserPosition"] != null)
                {
                    @*<li class="pull-left text-center" style="margin-right:650px;">*@

                    @*</li>*@
                    <li class="dropdown user user-menu">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            <span class="hidden-xs">@User.Identity.GetUserName()</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="user-header" style="background-color:#A71717">
                                <img src="~/Content/img/user.svg" class="img-circle" alt="User Image">

                                <p>
                                    @User.Identity.GetUserName() - @Session["UserPosition"]
                                    @*<small>Member since Jul. 2019</small>*@
                                </p>
                            </li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat"><i class="fa fa-share"></i>&nbsp;<span>Sign out</span></a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </li>
                }
                @* END User Account Menu *@
            </ul>
        </div>
    </nav>
</header>